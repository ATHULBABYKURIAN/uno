<UserControl x:Class="UITests.Shared.Windows_UI_Xaml.Panels.StackPanelBorderThicknessAndPadding"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml.Panels"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Sample higlighting the behavior of a content (black) with a StackPanel (white) with Padding or a BorderThickness (pink)">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<StackPanel HorizontalAlignment="Stretch"
							VerticalAlignment="Stretch">
					
					<TextBlock Text="Grid with BorderThickness" />

					<StackPanel Height="100"
								Width="100"
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								Background="White"
								BorderBrush="DeepPink"
								BorderThickness="5">
						<Grid Height="100"
							  Width="100"
							  Background="Black" />
					</StackPanel>

					<TextBlock Text="Grid with Padding" />

					<StackPanel Height="100"
								Width="100"
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								Background="White"
								Padding="5">
						<Grid Height="100"
							  Width="100"
							  Background="Black" />
					</StackPanel>

					<TextBlock Text="Grid with BorderThickness and Padding" />

					<StackPanel Height="100"
								Width="100"
								VerticalAlignment="Center"
								HorizontalAlignment="Center"
								Background="White"
								BorderBrush="DeepPink"
								BorderThickness="5"
								Padding="5">
						<Grid Height="100"
							  Width="100"
							  Background="Black" />
					</StackPanel>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
