<UserControl x:Class="UITests.Shared.Windows_UI_Xaml.AdaptiveTrigger.AdaptiveTrigger_TextBox"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml.AdaptiveTrigger"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
		<VisualStateManager.VisualStateGroups>
			<VisualStateGroup>
				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="20" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="myPanel.Orientation"
								Value="Horizontal" />
					</VisualState.Setters>
				</VisualState>

				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="360" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="AdaptiveTriggerTextBox.Text"
								Value="Narrow font textbox" />
						<Setter Target="AdaptiveTriggerTextBox.FontSize"
								Value="20" />
					</VisualState.Setters>
				</VisualState>

				<VisualState>
					<VisualState.StateTriggers>
						<AdaptiveTrigger MinWindowWidth="800" />
					</VisualState.StateTriggers>
					<VisualState.Setters>
						<Setter Target="AdaptiveTriggerTextBox.Text"
								Value="Wide font textbox" />
						<Setter Target="AdaptiveTriggerTextBox.FontSize"
								Value="40" />
					</VisualState.Setters>
				</VisualState>
			</VisualStateGroup>
		</VisualStateManager.VisualStateGroups>

		<StackPanel x:Name="myPanel">
			<TextBlock x:Name="TextBlockAdaptiveTrigger"
					   Text="Testing Text Box with Adaptive Trigger"
					   Style="{ThemeResource BodyTextBlockStyle}" />
			<Border BorderBrush="Blue"
					BorderThickness="2">
				<TextBox x:Name="AdaptiveTriggerTextBox" />
			</Border>

			<!-- FontSize-->
			<StackPanel Orientation="Horizontal">

				<!-- Label -->
				<TextBlock Text="FontSize is:"
						   Style="{ThemeResource BodyTextBlockStyle}"
						   Margin="0,0,4,0" />

				<!-- Value -->
				<TextBlock x:Name="TextBlockFontSizeValue"
						   Text="{Binding FontSize, ElementName=AdaptiveTriggerTextBox}"
						   Style="{ThemeResource BodyTextBlockStyle}" />
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
