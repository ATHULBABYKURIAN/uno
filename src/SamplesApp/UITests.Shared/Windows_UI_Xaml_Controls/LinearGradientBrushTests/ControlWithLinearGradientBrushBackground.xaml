<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.LinearGradientBrushTests.ControlWithLinearGradientBrushBackground"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.LinearGradientBrushTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"	
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="ContentControl with LinearGradientBrush as Background, template-bound to ContentPresenter">
		<controls:SampleControl.SampleContent>
			<DataTemplate>

				<ContentControl Content="Has LinearGradientBrush"
								Width="300"
								Height="150">
					
					<ContentControl.Background>
						<LinearGradientBrush EndPoint="0,0"
											 StartPoint="1,1">
							<GradientStop Color="Khaki" />
							<GradientStop Color="IndianRed"
										  Offset="0.172" />
							<GradientStop Color="HotPink"
										  Offset="0.41" />
							<GradientStop Color="OliveDrab"
										  Offset="1" />
						</LinearGradientBrush>
					</ContentControl.Background>

					<ContentControl.Template>
						
						<ControlTemplate TargetType="ContentControl">
							<ContentPresenter Content="{TemplateBinding Content}"
											  Background="{TemplateBinding Background}" />
						</ControlTemplate>
					</ContentControl.Template>
				</ContentControl>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
