<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel.RelativePanel_TextWrappingScenarios"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="RelativePanel sample with an edge scenario where text that can wrap is just long enough so that it should.">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>
					<TextBlock Text="Basic Example, red area should be a perfect square" />

					<RelativePanel Background="Gray"
								   Width="200"
								   VerticalAlignment="Top">
						<Border x:Name="Border1"
								Height="50"
								Width="50"
								Background="Tomato"
								RelativePanel.AlignLeftWithPanel="True"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<Border x:Name="Border2"
								Margin="10,0,0,0"
								VerticalAlignment="Center"
								RelativePanel.AlignRightWithPanel="True"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<Border x:Name="Border3"
								RelativePanel.LeftOf="Border2"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<TextBlock Text="Random text that should wrap"
								   TextWrapping="Wrap"
								   MaxLines="0"
								   VerticalAlignment="Center"
								   RelativePanel.AlignTopWithPanel="True"
								   RelativePanel.AlignBottomWithPanel="True"
								   RelativePanel.RightOf="Border1"
								   RelativePanel.LeftOf="Border3" />
					</RelativePanel>

					<TextBlock Text="Example with margins around the border, red area should be a perfect square" />

					<RelativePanel Background="Gray"
								   Width="250"
								   VerticalAlignment="Top">
						<Border x:Name="Border4"
								Height="50"
								Width="50"
								Margin="25,0"
								Background="Tomato"
								RelativePanel.AlignLeftWithPanel="True"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<Border x:Name="Border5"
								Margin="10,0,0,0"
								VerticalAlignment="Center"
								RelativePanel.AlignRightWithPanel="True"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<Border x:Name="Border6"
								RelativePanel.LeftOf="Border5"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True" />

						<TextBlock Text="Random text that should wrap"
								   TextWrapping="Wrap"
								   MaxLines="0"
								   VerticalAlignment="Center"
								   RelativePanel.AlignTopWithPanel="True"
								   RelativePanel.AlignBottomWithPanel="True"
								   RelativePanel.RightOf="Border4"
								   RelativePanel.LeftOf="Border6" />
					</RelativePanel>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>

