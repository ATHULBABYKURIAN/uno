<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel.RelativePanel_ContentWithPadding"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Sample for a RelativePanel containing multiple children and padding">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<ScrollViewer>
					<StackPanel>
						
						<TextBlock Text="One child" />

						<RelativePanel Background="Gray">
							<Border x:Name="Corny"
									Background="CornflowerBlue"
									Width="100"
									Height="100" />
						</RelativePanel>

						<TextBlock Text="One child, padding 10" />

						<RelativePanel Background="Gray"
									   Padding="10">
							<Border x:Name="Corny2"
									Background="CornflowerBlue"
									Width="100"
									Height="100" />
						</RelativePanel>

						<TextBlock Text="One child, padding 10,0" />

						<RelativePanel Background="Gray"
									   Padding="10,0">
							<Border x:Name="Corny3"
									Background="CornflowerBlue"
									Width="100"
									Height="100" />
						</RelativePanel>

						<TextBlock Text="One child, padding 0,10" />

						<RelativePanel Background="Gray"
									   Padding="0,10">
							<Border x:Name="Corny4"
									Background="CornflowerBlue"
									Width="100"
									Height="100" />
						</RelativePanel>
					</StackPanel>
				</ScrollViewer>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
