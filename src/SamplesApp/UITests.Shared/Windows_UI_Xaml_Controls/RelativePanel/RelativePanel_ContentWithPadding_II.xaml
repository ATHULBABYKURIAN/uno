<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel.RelativePanel_ContentWithPadding_II"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="RelativePanel_ContentWithPadding_II">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>

					<TextBlock Text="Two children, padding 10" />

					<RelativePanel Background="Gray"
								   Padding="10">

						<Border x:Name="Corny5"
								Background="CornflowerBlue"
								Width="100"
								Height="100" />

						<Border x:Name="Greeny"
								Background="Lime"
								Width="75"
								Height="75" />
					</RelativePanel>

					<TextBlock Text="2x2 4 color square + Black stretched rectangle with margins, padding 10" />

					<RelativePanel Background="Gray"
								   Padding="10">

						<Border x:Name="Corny6"
								Background="CornflowerBlue"
								Width="100"
								Height="100" />

						<Border x:Name="Greeny2"
								Background="Lime"
								Width="100"
								Height="100"
								RelativePanel.RightOf="Corny6" />

						<Border x:Name="Redish"
								Background="Tomato"
								Width="100"
								Height="100"
								RelativePanel.Below="Corny6"
								RelativePanel.AlignRightWith="Greeny2" />

						<Border x:Name="Burple"
								Background="Violet"
								Width="100"
								Height="100"
								RelativePanel.Below="Corny6" />

						<Border Background="Black"
								VerticalAlignment="Stretch"
								HorizontalAlignment="Stretch"
								RelativePanel.AlignTopWithPanel="True"
								RelativePanel.AlignBottomWithPanel="True"
								RelativePanel.AlignLeftWithPanel="True"
								RelativePanel.AlignRightWithPanel="True"
								Margin="25" />
					</RelativePanel>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
