<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel.RelativePanel_InListView"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.RelativePanel"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<UserControl.Resources>
		<DataTemplate x:Key="StoreTemplate">
			<RelativePanel Height="120"
						   Padding="14,10,15,0">

				<PathIcon x:Name="StoreIcon"
						  Data="M12.5,6.18301 C14.069,6.18301 15.339,7.45501 15.339,9.02201 C15.339,9.68801 15.107,10.3 14.723,10.785 C14.203,11.439 13.401,11.861 12.5,11.861 C11.599,11.861 10.798,11.439 10.277,10.785 C9.89201,10.3 9.66001,9.68801 9.66001,9.02201 C9.66101,7.45501 10.932,6.18301 12.5,6.18301 z M12.5,3.75 C9.587,3.75 7.228,6.109 7.228,9.017 C7.228,9.851 7.426,10.637 7.77,11.338 L7.765,11.339 L12.5,21.25 L17.234,11.339 L17.23,11.338 C17.574,10.637 17.772,9.852 17.772,9.017 C17.772,6.109 15.413,3.75 12.5,3.75 z M12.5,0 C19.404,0 25,5.596 25,12.5 C25,19.403 19.404,25 12.5,25 C5.597,25 0,19.403 0,12.5 C0,5.596 5.597,0 12.5,0 z"
						  Foreground="CornflowerBlue"
						  Margin="0,5,10,0"
						  RelativePanel.AlignLeftWithPanel="True"
						  RelativePanel.AlignTopWithPanel="True" />

				<!-- Distance -->
				<TextBlock x:Name="StoreDistance"
						   Text="64cm"
						   FontSize="10"
						   TextWrapping="NoWrap"
						   VerticalAlignment="Top"
						   RelativePanel.AlignRightWithPanel="True"
						   RelativePanel.AlignTopWithPanel="True" />

				<!-- Name -->
				<TextBlock x:Name="StoreName"
						   Text="Jean-Philippe Lévesque et Autres noms vraiment longs qui devraient se faire trim"
						   TextWrapping="NoWrap"
						   MaxLines="1"
						   FontSize="16"
						   FontWeight="Bold"
						   Margin="0,0,5,0"
						   RelativePanel.AlignTopWithPanel="True"
						   RelativePanel.RightOf="StoreIcon"
						   RelativePanel.LeftOf="StoreDistance" />

				<!-- Address -->
				<TextBlock x:Name="StoreAddressLine1"
						   Text="0x45 Rue de l'adresse principale"
						   FontSize="14"
						   Margin="0,0,5,0"
						   TextWrapping="NoWrap"
						   MaxLines="1"
						   RelativePanel.Below="StoreName"
						   RelativePanel.RightOf="StoreIcon"
						   RelativePanel.LeftOf="StoreDistance" />

				<TextBlock x:Name="StoreAddressLine2"
						   Text="Mourial QC, H1S 0B0"
						   FontSize="14"
						   Margin="0,0,5,0"
						   TextWrapping="NoWrap"
						   MaxLines="1"
						   RelativePanel.Below="StoreAddressLine1"
						   RelativePanel.RightOf="StoreIcon"
						   RelativePanel.LeftOf="StoreDistance" />

				<!-- Phone number -->
				<TextBlock x:Name="StorePhoneNumber"
						   Text="1 888-555-2626"
						   FontSize="12"
						   FontWeight="Bold"
						   Margin="0,3,0,8"
						   RelativePanel.Below="StoreAddressLine2"
						   RelativePanel.RightOf="StoreIcon"
						   RelativePanel.LeftOf="StoreDistance" />

				<!-- Opening hours -->
				<TextBlock Text="Ouvert aujourd'hui"
						   FontSize="12"
						   FontWeight="Bold"
						   MaxLines="1"
						   VerticalAlignment="Top"
						   RelativePanel.Below="StorePhoneNumber"
						   RelativePanel.RightOf="StoreIcon"
						   RelativePanel.LeftOf="StoreDistance" />
			</RelativePanel>
		</DataTemplate>
	</UserControl.Resources>

	<controls:SampleControl SampleDescription="2 ListViews where the item template is the same, using a Relative panel. All elements visible in the first list should be visible in the second one, including the map Pin.">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<Grid>
					<Grid.RowDefinitions>
						<RowDefinition Height="*" />
						<RowDefinition Height="*" />
					</Grid.RowDefinitions>

					<ListView ItemsSource="{Binding [SampleItems]}"
							  SelectionMode="None"
							  ItemTemplate="{StaticResource StoreTemplate}"
							  IsItemClickEnabled="True" />

					<ListView ItemsSource="{Binding [SampleItems]}"
							  Width="300"
							  Grid.Row="1"
							  SelectionMode="None"
							  ItemTemplate="{StaticResource StoreTemplate}"
							  IsItemClickEnabled="True" />
				</Grid>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>

