<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipView_ObservableCollection_Insertions"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Description for sample of ItemsControl_ObservableCollection_Insertions">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>
					
					<StackPanel Orientation="Horizontal"
								Background="Tan">
						<TextBlock Text="SelectedIndex: " />
						<TextBlock Text="{Binding [SelectedIndex]}" />
						<TextBlock Text="Selected Item: " />
						<TextBlock Text="{Binding [SelectedItem]}" />
					</StackPanel>

					<Button Content="Insert at third position"
							Command="{Binding [InsertAtThird]}" />

					<Border BorderBrush="Azure"
							BorderThickness="2">

						<FlipView Width="100"
								  Height="100"
								  ItemsSource="{Binding [SampleItems]}"
								  SelectedIndex="{Binding [SelectedIndex], Mode=TwoWay}"
								  SelectedItem="{Binding [SelectedItem], Mode=TwoWay}">

							<FlipView.ItemTemplate>
								<DataTemplate>
									
									<Border Background="LightSeaGreen"
											BorderBrush="DarkSeaGreen"
											BorderThickness="3">
										<TextBlock Text="{Binding}"
												   HorizontalAlignment="Center"
												   VerticalAlignment="Center" />
									</Border>
								</DataTemplate>
							</FlipView.ItemTemplate>
						</FlipView>
					</Border>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
