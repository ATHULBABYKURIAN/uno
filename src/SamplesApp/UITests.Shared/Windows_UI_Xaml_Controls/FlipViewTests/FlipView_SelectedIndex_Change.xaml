<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipView_SelectedIndex_Change"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<StackPanel>
		
		<Button Content="Increment selection"
				Click="Button_Click_17" />

		<Button Content="Increment selection bigly"
				Click="Button_Click_18" />

		<Button Content="Decrement bigly"
				Click="Button_Click_19" />

		<FlipView x:Name="TargetFlipView"
				  Background="Beige"
				  Width="300"
				  Height="200"
				  UseTouchAnimationsForAllNavigation="True">

			<FlipView.ItemTemplate>
				<DataTemplate>

					<Border BorderBrush="Blue"
							BorderThickness="2"
							Width="150"
							Height="150">
						
						<TextBlock Text="{Binding}"
								   FontSize="48" />
					</Border>
				</DataTemplate>
			</FlipView.ItemTemplate>
		</FlipView>
	</StackPanel>
</UserControl>
