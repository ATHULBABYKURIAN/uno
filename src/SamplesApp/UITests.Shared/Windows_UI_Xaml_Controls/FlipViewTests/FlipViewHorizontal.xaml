<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipViewHorizontal"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="FlipViewHorizontal"
							x:Name="_sampleControl">
		<controls:SampleControl.SampleContent>
			<DataTemplate>

				<StackPanel>

					<Button Content="New source"
							Command="{Binding [NewItems]}" />

					<FlipView ItemsSource="{Binding [SampleItems]}"
							  x:Name="FlipView"
							  Width="300"
							  Height="150"
							  Background="Red">

						<FlipView.ItemTemplate>
							<DataTemplate>

								<Border BorderBrush="Blue"
										BorderThickness="3">

									<StackPanel>

										<TextBlock Height="60"
												   Foreground="Blue">
											<Run Text="Image: " />
											<Run Text="{Binding}" />
										</TextBlock>
										
										<Image Source="{Binding}"
											   Width="200"
											   Height="100" />
									</StackPanel>
								</Border>
							</DataTemplate>
						</FlipView.ItemTemplate>
					</FlipView>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
