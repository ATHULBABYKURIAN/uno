<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipView_Animation"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Flipview animate when switching between items. ">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel Orientation="Horizontal">
					<Button Content="Previous"
							Command="{Binding [ShowPreviousItem]}" />
					<FlipView Width="150"
							  Height="150"
							  SelectedIndex="{Binding [SelectedIndex], Mode=TwoWay}"
							  ItemsSource="{Binding [FlipViewItems]}">
						<FlipView.ItemTemplate>
							<DataTemplate>
								<Border Background="LightSeaGreen"
										BorderBrush="DarkSeaGreen"
										BorderThickness="3">
									<TextBlock Text="{Binding}"
											   HorizontalAlignment="Center"
											   VerticalAlignment="Center" />
								</Border>
							</DataTemplate>
						</FlipView.ItemTemplate>
					</FlipView>
					<Button Content="Next"
							Command="{Binding [ShowNextItem]}" />
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
