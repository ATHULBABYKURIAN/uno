<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipView_Bounce_Disabled"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ios="http://uno.ui/ios"
			 mc:Ignorable="ios">

	<controls:SampleControl SampleDescription="FlipView with bounce at edges disabled (iOS only)">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<FlipView Background="Beige">

					<FlipViewItem>
						<Border Width="300"
								Height="400"
								Background="Red"
								Margin="5" />
					</FlipViewItem>

					<FlipViewItem>
						<Border Width="300"
								Height="400"
								Background="Green"
								Margin="5" />
					</FlipViewItem>

					<ios:FlipView.ItemsPanel>
						<ItemsPanelTemplate>
							<PagedCollectionView Bounces="False"
												 ShowsHorizontalScrollIndicator="False" />
						</ItemsPanelTemplate>
					</ios:FlipView.ItemsPanel>
				</FlipView>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
