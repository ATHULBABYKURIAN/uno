<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests.FlipViewHorizontalInListView"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.FlipViewTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="FlipViewHorizontal"
							x:Name="_sampleControl">
		
		<controls:SampleControl.SampleContent>
			<DataTemplate>

				<ListView ItemsSource="{Binding [SampleListItems]}">

					<ListView.ItemTemplate>
						<DataTemplate>

							<FlipView ItemsSource="{Binding FlipViewItems}"
									  x:Name="FlipView"
									  Width="300"
									  Height="200">

								<FlipView.ItemTemplate>
									<DataTemplate>

										<Grid BorderBrush="Blue"
											  BorderThickness="3"
											  Height="200"
											  Width="300">
											
											<Image Source="{Binding}"
												   Width="300"
												   Height="200" />

											<TextBlock Height="30"
													   Foreground="Blue">
												<Run Text="Image: " />
												<Run Text="{Binding}" />
											</TextBlock>
										</Grid>
									</DataTemplate>
								</FlipView.ItemTemplate>
							</FlipView>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
