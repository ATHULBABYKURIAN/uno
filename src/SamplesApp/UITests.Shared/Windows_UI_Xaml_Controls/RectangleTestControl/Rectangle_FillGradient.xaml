<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.RectangleTestControl.Rectangle_FillGradient"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.RectangleTestControl"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Rectangle_FillGradient">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<Rectangle Width="75"
						   Height="50">
					<Rectangle.Fill>
						<LinearGradientBrush EndPoint="0.504,1.5"
											 StartPoint="0.504,0.03">
							<LinearGradientBrush.GradientStops>
								<GradientStopCollection>
									<GradientStop Color="#FFFFC934"
												  Offset="0" />
									<GradientStop Color="#FFFFFFFF"
												  Offset="0.567" />
								</GradientStopCollection>
							</LinearGradientBrush.GradientStops>
						</LinearGradientBrush>
					</Rectangle.Fill>
				</Rectangle>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
