<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_Horizontal_Inside_Vertical"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns:android="http://uno.ui/android"
			 mc:Ignorable="android">

	<controls:SampleControl SampleDescription="Horizontal ScrollViewer and HorizontalListView (Android only) nested inside vertical ScrollViewer">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<ScrollViewer Width="300"
							  Height="400"
							  VerticalScrollBarVisibility="Auto"
							  HorizontalScrollBarVisibility="Disabled">

					<StackPanel>

						<TextBlock Text="Sint ad umami, yr tacos stumptown cred microdosing ut tumblr fingerstache chia. +1 man bun mumblecore, consequat deep v vinyl mollit fugiat. Mixtape deep v green juice banh mi."
