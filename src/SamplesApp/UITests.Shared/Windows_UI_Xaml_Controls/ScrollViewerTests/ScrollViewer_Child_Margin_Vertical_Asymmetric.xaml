<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_Child_Margin_Vertical_Asymmetric"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="ScrollViewers with content with asymmetric top and bottom margins">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<StackPanel>

					<ScrollViewer Background="Beige"
								  Width="250"
								  Height="200">

						<Border HorizontalAlignment="Stretch"
								Margin="10,30,10,60"
								BorderBrush="Blue"
								BorderThickness="2"
								Background="Red"
								Height="800" />
					</ScrollViewer>

					<ScrollViewer Background="Moccasin"
								  Width="250"
								  Height="200">

						<Border HorizontalAlignment="Stretch"
								Margin="10,60,10,30"
								BorderBrush="Blue"
								BorderThickness="2"
								Background="Red"
								Height="800" />
					</ScrollViewer>
				</StackPanel>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
