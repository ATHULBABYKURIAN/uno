<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_Child_Margin"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Testing ScrollViewer containing a Child with Margin">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<ScrollViewer>
					
					<Border Background="Red"
							Margin="20"
							Height="2000">
						
						<TextBox Margin="0,800,0,0"
								 Header="Tap here:"
								 PlaceholderText="Hello !" />
					</Border>
				</ScrollViewer>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
