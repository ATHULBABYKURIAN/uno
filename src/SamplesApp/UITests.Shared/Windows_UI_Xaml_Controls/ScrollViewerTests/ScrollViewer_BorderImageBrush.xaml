<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_BorderImageBrush"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="Sample for a ScrollViewer containing only one Border with ImageBrush">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<ScrollViewer>
					<Border Height="100">
						<Border.Background>
							
							<ImageBrush ImageSource="http://mediafiles.cineplex.com/Central/Film/Posters/23179_320_470.jpg"
										Stretch="UniformToFill">
								<ImageBrush.RelativeTransform>
									<ScaleTransform ScaleX="2"
													ScaleY="2"
													CenterX=".5"
													CenterY=".5" />
								</ImageBrush.RelativeTransform>
							</ImageBrush>
						</Border.Background>
					</Border>
				</ScrollViewer>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
