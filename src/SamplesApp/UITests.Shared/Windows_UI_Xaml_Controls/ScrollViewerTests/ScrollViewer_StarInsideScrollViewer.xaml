<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_StarInsideScrollViewer"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:uno="using:Uno.UI.Samples.Controls"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">


	<controls:SampleControl SampleDescription="The content has no size and should stretch to the size of the outer ScrollViewer">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<ScrollViewer MinWidth="300"
							  MinHeight="300">

					<uno:StarStackPanel Name="InnerStarStackPanel">

						<Border uno:StarStackPanel.Size="*"
								Background="Red" />

						<Border uno:StarStackPanel.Size="*"
								Background="Blue" />
					</uno:StarStackPanel>
				</ScrollViewer>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
