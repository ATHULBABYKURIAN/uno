<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests.ScrollViewer_Touch_Delay"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.ScrollViewerTests"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<StackPanel>

		<TextBlock Text="This is scrollable. There should be a slight delay on iOS when pressing the button." />

		<ScrollViewer Height="100">
			<StackPanel Height="200">
				<Button Content="Delayed Pressed State" />
			</StackPanel>
		</ScrollViewer>

		<TextBlock Text="This is not scrollable. There should be no delay when pressing the button." />
		
		<ScrollViewer Height="100">
			<StackPanel Height="50">
				<Button Content="Instant Pressed State" />
			</StackPanel>
		</ScrollViewer>
	</StackPanel>
</UserControl>
