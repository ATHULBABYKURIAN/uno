<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.GridView.GridView_Item_TextBlock_And_Button"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.GridView"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<GridView ItemsSource="{Binding [SampleItems]}">
		<GridView.ItemTemplate>
			<DataTemplate>
				
				<Grid Height="200"
					  Width="200"
					  Background="LightGray">

					<TextBlock Text="Test"
							   HorizontalAlignment="Center"
							   VerticalAlignment="Center" />
					
					<Button Content="Button"
							VerticalAlignment="Bottom"
							HorizontalAlignment="Right" />
				</Grid>
			</DataTemplate>
		</GridView.ItemTemplate>
	</GridView>
</UserControl>
