<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.GridView.GridViewUnfixedWidth"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.GridView"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 mc:Ignorable="">

	<controls:SampleControl SampleDescription="GridView without fixed width. Should take the width (light green) needed for the 3 columns that can fit.">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<Border Width="300"
						Height="400"
						Background="DarkSeaGreen">

					<Border HorizontalAlignment="Center"
							VerticalAlignment="Center"
							Background="LightSeaGreen">

						<GridView ItemsSource="{Binding SampleColors}">
							
							<GridView.ItemsPanel>
								<ItemsPanelTemplate>
									<ItemsWrapGrid ItemWidth="80"
												   ItemHeight="150"
												   Orientation="Horizontal" />
								</ItemsPanelTemplate>
							</GridView.ItemsPanel>

							<GridView.ItemTemplate>
								<DataTemplate>
									<Ellipse Width="70"
											 Height="140">
										<Ellipse.Fill>
											<SolidColorBrush Color="{Binding}" />
										</Ellipse.Fill>
									</Ellipse>
								</DataTemplate>
							</GridView.ItemTemplate>
						</GridView>
					</Border>
				</Border>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
