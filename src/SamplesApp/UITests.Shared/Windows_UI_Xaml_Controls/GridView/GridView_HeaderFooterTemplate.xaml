<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.GridView.GridView_HeaderFooterTemplate"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.GridView"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns:ios="http://uno.ui/ios"
			 mc:Ignorable="ios">

	<controls:SampleControl SampleDescription="GridView_HeaderFooterTemplateControl">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				
				<GridView ItemsSource="{Binding [SampleItems]}"
						  Header="Header text"
						  Footer="Footer text">

					<GridView.HeaderTemplate>
						<DataTemplate>

							<Border ios:Height="60"
									Background="Green">
								<TextBlock Text="{Binding}"
										   Foreground="Red" />
							</Border>
						</DataTemplate>
					</GridView.HeaderTemplate>

					<GridView.ItemTemplate>
						<DataTemplate>

							<Border ios:Height="20"
									Background="Orange"
									Margin="10">
								<TextBlock Text="{Binding}"
										   Foreground="Blue"
										   Width="60" />
							</Border>
						</DataTemplate>
					</GridView.ItemTemplate>

					<GridView.FooterTemplate>
						<DataTemplate>

							<Border ios:Height="150"
									Background="DeepSkyBlue">
								<TextBlock Text="{Binding}"
										   Foreground="Orchid" />
							</Border>
						</DataTemplate>
					</GridView.FooterTemplate>
				</GridView>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
