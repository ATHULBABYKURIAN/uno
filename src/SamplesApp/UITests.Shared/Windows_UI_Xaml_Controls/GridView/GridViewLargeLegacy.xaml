<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.GridView.GridViewLargeLegacy"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.GridView"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:win="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:controls="using:Uno.UI.Samples.Controls"
			 xmlns:legacy="using:Uno.UI.Controls.Legacy"
			 xmlns:xamarin="http://umbrella/xamarin"
			 xmlns:android="http://uno.ui/android"
			 mc:Ignorable="xamarin android">

	<controls:SampleControl SampleDescription="Legacy GridView with large number of items">
		<controls:SampleControl.SampleContent>
			<DataTemplate>
				<win:TextBlock Text="No legacy GridView on Windows, nothing to see here" />
				<xamarin:Border>
					<legacy:GridView ItemsSource="{Binding SampleItemsLong}"
									 Width="450"
									 Height="400"
									 android:ItemMaxWidth="80">
						<legacy:GridView.ItemTemplate>
							<DataTemplate>
								<Border Width="75"
										Height="30"
										Background="Green"
										BorderBrush="GreenYellow"
										BorderThickness="2">
									<TextBlock Text="{Binding}"
											   Foreground="Yellow" />
								</Border>
							</DataTemplate>
						</legacy:GridView.ItemTemplate>
					</legacy:GridView>
				</xamarin:Border>
			</DataTemplate>
		</controls:SampleControl.SampleContent>
	</controls:SampleControl>
</UserControl>
