<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.SplitView.SplitView_LeftDrawerSplitViewStyle"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.SplitView"
			 xmlns:not_android="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:android="http://uno.ui/android"
			 mc:Ignorable="android">

	<Grid>

		<android:SplitView x:Name="SplitView"
						   Height="400"
						   Width="400"
						   Style="{StaticResource LeftDrawerSplitViewStyle}"
						   OpenPaneLength="200"
						   PaneBackground="LightGray">
			<SplitView.Pane>
				<Border>
					<TextBlock Text="Pane" />
				</Border>
			</SplitView.Pane>

			<SplitView.Content>
				<Border>
					<ToggleButton Content="Toggle SplitView.IsPaneOpen"
								  IsChecked="{Binding IsPaneOpen, ElementName=SplitView, Mode=TwoWay}" />
				</Border>
			</SplitView.Content>
		</android:SplitView>

		<not_android:TextBlock Text="Android only" />
	</Grid>
</UserControl>
