<UserControl x:Class="UITests.Shared.Windows_UI_Xaml_Controls.Canvas.Canvas_Dynamic"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:local="using:UITests.Shared.Windows_UI_Xaml_Controls.Canvas"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="">

	<StackPanel>

		<!-- Label -->
		<TextBlock Text="Top" />
		
		<!-- Slider Top -->
		<Slider x:Name="Top"
				HorizontalAlignment="Left"
				Orientation="Vertical"
				Minimum="0"
				Maximum="200"
				Value="0"
				Height="50"
				Background="Black"
				IsDirectionReversed="True" />

		<!-- Label -->
		<TextBlock Text="Left" />

		<!-- Slider Left -->
		<Slider x:Name="Left"
				HorizontalAlignment="Left"
				Minimum="0"
				Maximum="200"
				Value="0"
				Width="50"
				Background="Black" />

		<!-- Canvas -->
		<Canvas Background="LightGray"
				Width="300"
				Height="300">
			<Border Height="100"
					Width="100"
					Background="Red"
					Canvas.Top="{Binding Value, ElementName=Top}"
					Canvas.Left="{Binding Value, ElementName=Left}" />
		</Canvas>
	</StackPanel>
</UserControl>
